<?xml version="1.0" encoding="utf-8"?>
<Configuration monitorInterval="300">
  <Properties>
    <Property name="log-path">{InstallPath}/logs</Property>
  </Properties>
  <Appenders>
    <RollingFile name="HourlyRoll" fileName="${log-path}/RestApi_Node{NodeId}.log" filePattern="${log-path}/RestApi_Node{NodeId}-%d{yyyy-MM-dd-HH}-%i.log.gz">
      <!-- PatternLayout pattern="%d - %c [%t] (%F:%L) - %p - %m %n"  -->
      <!-- PatternLayout pattern="%d - %c [%t] (%M) - %p - %m %n"  -->
      <PatternLayout pattern="%d - %c [%t] - %p - %m %n" />
      <Policies>
        <SizeBasedTriggeringPolicy size="2 GB" />
        <TimeBasedTriggeringPolicy />
        <OnStartupTriggeringPolicy />
      </Policies>      
    </RollingFile>
    <Console name="CONSOLE" target="SYSTEM_OUT">
      <PatternLayout pattern="%5p [%t] - %m%n" />
    </Console>
  </Appenders>
  <Loggers>
    <Root level="WARN">
      <AppenderRef ref="HourlyRoll" />
    </Root>
  </Loggers>
</Configuration>
